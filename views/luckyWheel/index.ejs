            });
            function startSpin()
            {
                theWheel.stopAnimation(false);
                theWheel.rotationAngle = theWheel.rotationAngle % 360;
                theWheel.startAnimation();

            }
            let audio = new Audio('tick.mp3');
            function playSound()
            {
                audio.pause();
                audio.currentTime = 0;
                audio.play();
            }
            function alertPrize(indicatedSegment)
            {
              var popup = indicatedSegment.text;
